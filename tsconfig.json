{
  "compilerOptions": {
    "target": "ES2021",   
    "module": "commonjs",   
    "declaration": true,                            
    "outDir": "./dist",                            
    "rootDir": "./src", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "exclude":[
    "./node_modules",
    "./dist",
    "./demo",
  ]
}
